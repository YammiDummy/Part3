#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
#include <fstream>
#include <sstream>

using namespace std;

template <typename T>
void Swap(T& a, T& b) {
    T temp;
    temp = a;
    a = b;
    b = temp;
};

template <typename T>
void SortPointers(vector<T> &vp) {
    sort(vp.begin(), vp.end(), [](T vp1, T vp2) {
        return *vp1 < *vp2;
        });
};

//int vowel_counter_1 (string& b) {
//
//};







int main()
{
    setlocale(LC_CTYPE, "RUSSIAN");
    string num1 = "тест1";
    string num2 = "test2";
    string num3 = "test3";
    string* p1 = &num1;
    string* p2 = &num2;
    string* p3 = &num3;

    cout << "start" << endl;

    cout << *p1 << " " << *p2 << " " << *p3 << endl;

    Swap(p1, p2);
    Swap(p2, p3);

    cout << "swap" << endl;

    cout << *p1 << " " << *p2 << " " << *p3 << endl;

    vector<string*> str_vec;
    str_vec.push_back(p1);
    str_vec.push_back(p2);
    str_vec.push_back(p3);

    cout << "vector" << endl;

    cout << *str_vec[0] << " " << *str_vec[1] << " " << *str_vec[2] << endl;

    SortPointers(str_vec);

    cout << "sort vector" << endl;

    cout << *str_vec[0] << " " << *str_vec[1] << " " << *str_vec[2] << endl;

    string book;
    ifstream file("D:\\GB\\C++\\P3\\L2\\WP.txt");
    
    if (file.is_open()) {
        stringstream ss;
        ss << file.rdbuf();
        book = ss.str();
        file.close();
    }
    else 
        cout << "File is unable." << endl;

    cout << book[0] << book[1];
}

